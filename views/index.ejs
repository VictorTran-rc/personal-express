
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Pokemon</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="fas fa-plus">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Pokemon Fan page</h1>


  <h2>Add a message</h2>

  <form action="/messages" method="POST" onSubmit>
    <input id="getText" type="text" placeholder="name" name="name">
    <input type="text" placeholder="message" name="msg">
    <button id="button" type="submit">Submit</button>
  </form>

  <h3>Add your favorite Pokemon</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <h3 class="name"><%= messages[i].name %></h3>
      <h3 class="msg"><%= messages[i].msg %></h3>
      <img src="">
      <span class="likes"><%= messages[i].thumbUp %></span>
      <span><i class="fa fa-plus" aria-hidden="true"></i></span>
      <!-- <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <script src="main.js"></script>

</body>
</html>
